<% layout('layouts/layoutTeacher') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reviews</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Ensure your CSS file is linked -->
</head>
<body>
    <div id="reviews-container">
        <h1 class="review-title">Reviews for Your Topics</h1>
        <% if (reviews.length > 0) { %>
            <ul class="review-list">
                <% reviews.forEach(review => { %>
                    <li class="review-item">
                        <div class="review-content">
                            <strong class="review-from">From:</strong> <%= review.studentId.name %> <br>
                            <strong class="review-rating-label">Rating:</strong> <span class="review-rating"><%= review.rating %></span> <br>
                            <strong class="review-message">Comments:</strong> <p class="review-message"><%= review.comments %></p> <br>
                        </div>
                        <form action="/syllabus/reviews/<%= review._id %>" method="POST" class="delete-form">
                            <button type="submit" class="delete-button">Remove</button>
                        </form>
                    </li>
                    <hr class="review-separator">
                <% }) %>
            </ul>
        <% } else { %>
            <p>No reviews available.</p>
        <% } %>
    </div>
</body>
</html>
